<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/layoutMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/white"
            fab:fab_addButtonColorPressed="@color/white_pressed"
            fab:fab_addButtonPlusIconColor="@color/half_black"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_addButtonSize="normal"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="1dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"
                fab:fab_icon="@drawable/ic_videocam_black_18dp"
                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Live hit Story" />

            <!--<com.getbase.floatingactionbutton.FloatingActionButton-->
                <!--android:id="@+id/action_b"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--fab:fab_colorNormal="#ffffff"-->
                <!--fab:fab_size="mini"-->
                <!--android:layout_marginBottom="-10dp"-->
                <!--fab:fab_icon="@drawable/ic_keyboard_alt_black_18dp"-->
                <!--fab:fab_colorPressed="#ffffff"-->
                <!--fab:fab_title="Smile Icon" />-->

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"
                fab:fab_icon="@drawable/ic_play_circle_outline_black_18dp"
                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Videos" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_location_on_black_18dp"
                fab:fab_colorPressed="#ffffff"
                android:layout_marginBottom="-10dp"
                fab:fab_title="Youtube" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_audiotrack_black_18dp"
                fab:fab_colorPressed="#ffffff"
                fab:fab_title="SoundColud" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"
                fab:fab_icon="@drawable/ic_crop_original_black_18dp"
                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Image" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_camera_alt_black_18dp"
                fab:fab_colorPressed="#ffffff"
                android:layout_marginBottom="-10dp"
                fab:fab_title="Camera" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"
                fab:fab_icon="@drawable/ic_create_black_18dp"
                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Write Post" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>


</RelativeLayout>