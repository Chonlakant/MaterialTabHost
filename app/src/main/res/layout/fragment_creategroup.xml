    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_size_layout_large"
        android:paddingLeft="@dimen/padding_size_layout_large"
        android:paddingRight="@dimen/padding_size_layout_large"
        android:gravity="top">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_layout_medium"
