<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="@bool/fitsSystemWindows"
    tools:context=".SampleActivity">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        <FrameLayout
            android:id="@+id/title_header"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/title_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo1" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/title_thumbnail"
                app:siBorderColor="#ffffff"
                app:siBorderWidth="3dp"
                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center|left|top"
                android:layout_marginLeft="@dimen/margin_size_layout_medium"
                android:layout_marginTop="@dimen/margin_size_layout_medium"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_layout_medium"
                android:text="Chonlakant Sattaboot"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_layout_medium"
                android:text="Sattaboot11@gmail.com"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="60dp" />
        </FrameLayout>


        <net.yanzm.mth.MaterialTabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <net.yanzm.mth.sample.ScrimInsetsFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:clickable="true"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:insetForeground="@color/inset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Your drawer content -->

            <FrameLayout
                android:id="@+id/header"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/header_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/photo1" />

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/header_thumbnail"

                    android:layout_width="@dimen/header_logo_size"
                    android:layout_height="@dimen/header_logo_size"
                    android:layout_gravity="center|left|top"
                    android:layout_marginLeft="@dimen/margin_size_layout_medium"
                    android:layout_marginTop="@dimen/margin_size_layout_medium"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_layout_medium"
                    android:text="Chonlakant Sattaboot"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_layout_medium"
                    android:text="Sattaboot11@gmail.com"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="50dp" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_size_layout_large"
                android:paddingLeft="@dimen/padding_size_layout_large"
                android:paddingRight="@dimen/padding_size_layout_large"
                android:gravity="top">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_layout_medium"
                    android:text="ACCOUNT"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/left_drawer"
                android:background="#ffffff"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="start">

                <ListView
                    android:id="@+id/list_drawer"

                    android:background="#F7F7F7"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/padding_size_layout_large"
                    android:paddingLeft="@dimen/padding_size_layout_large"
                    android:paddingRight="@dimen/padding_size_layout_large">

                    <Button
                        android:text="Log Out"
                        android:textColor="#000000"
                        android:background="#ffffff"
                        android:layout_marginLeft="@dimen/margin_size_layout_medium"
                        android:layout_width="120dp"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </net.yanzm.mth.sample.ScrimInsetsFrameLayout>

</android.support.v4.widget.DrawerLayout>
